@page "/pages/{httpStatusCode:int}"
@layout Layout.EmptyLayout

<PageTitle>@_pageTitle</PageTitle>

<div style="width:100%; height:100%; padding:12px 12px; display: flex; flex-direction: column; justify-content:center; align-items: center">
    @if (HttpStatusCode == 404) {
        <div>
            <p style="font-size: 100px;">😵</p>
            <h1>404 - Page Not Found</h1>
            <p>Oops! It looks like this page got lost in the endless stream of YouTube captions.</p>
            <p>Don't worry, our summary generator is still working hard to make sense of it all!</p>
            <p>In the meantime, why not head back to our <a href="/">homepage</a> and try again?</p>
        </div>
    } else {
        <h1>@_pageTitle</h1>
    }
</div>

@code {
    [Parameter] public int HttpStatusCode { get; set; }
    private string _pageTitle = "CaptionZen";

    protected override void OnParametersSet() {
        if (HttpStatusCode == 404) {
            _pageTitle = "404 - Page Not Found";
        }else{
            _pageTitle = $"{HttpStatusCode} - CaptionZen";
        }
    }

}